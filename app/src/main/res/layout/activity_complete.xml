<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.idevcorp.simpleandroidapp.ui.activities.CompleteActivity">

    <LinearLayout
        android:id="@+id/linearLayoutComplete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/textviewAnswer"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <EditText
            android:id="@+id/editTextComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/search_for"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonSearchComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="stuckOverSearch"
            android:text="@string/button_complete" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewComplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
