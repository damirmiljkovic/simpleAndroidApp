<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_question_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:id="@+id/layoutQuestionMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutImageUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="@android:dimen/notification_large_icon_height"
                android:layout_height="@android:dimen/notification_large_icon_height"
                android:layout_weight="1"
                android:contentDescription="@android:string/unknownName"
                tools:layout_editor_absoluteX="10dp"
                tools:layout_editor_absoluteY="18dp" />

            <TextView
                android:id="@+id/userTextView"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                tools:layout_editor_absoluteX="384dp"
                tools:layout_editor_absoluteY="490dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQuestionShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/textViewQuestionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/textviewQuestion"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="28dp" />

            <ImageView
                android:id="@+id/shareQuestionButton"
                android:layout_width="@android:dimen/app_icon_size"
                android:layout_height="@android:dimen/app_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:contentDescription="@android:string/unknownName"
                android:src="@android:drawable/ic_menu_share"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="28dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>